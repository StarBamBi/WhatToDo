<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.koreait.whattodo.board.cmt.BoardCmtMapper">
    <insert id="insBoardCmt">
        INSERT INTO t_board_cmt (iboard, iuser, ctnt)
        VALUES (${iboard}, ${iuser}, #{ctnt})
    </insert>
    
    <select id="selBoardCmtList" resultType="BoardCmtVo">
        SELECT *
        FROM t_board_cmt
        WHERE iboard = %{iboard}
    </select>

    <delete id="delBoardCmt">
        DELETE FROM t_board_cmt
        WHERE icmt = ${icmt}
    </delete>
</mapper>